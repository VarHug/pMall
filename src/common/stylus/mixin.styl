// 1px下边框
border-1px($color)
  position relative
  &:after
    display block
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
    content ' '

// 1px上边框
border-1px-top($color)
  position relative
  &:after
    display block
    position absolute
    top 0
    left 0
    width 100%
    border-top 1px solid $color
    content ''

// 无边框
border-none()
  &:after
    display none

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 清除浮动
clearfix()
  *zoom: 1
  &:after
    display table
    content: ''
    clear both

inner()
  margin 0 auto
  width 1200px
